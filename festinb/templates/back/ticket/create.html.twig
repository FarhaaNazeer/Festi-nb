{% extends 'back/base.html.twig' %}

{% block content %}
<main>
    <div class="useful-width useful-width__white-background">
        <div class="form">
            <h1>Ajout d'un nouveau ticket</h1>
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.start_date) }}
            {{ form_row(form.end_date) }}
            {{ form_row(form.price) }}
            {{ form_row(form.description) }}
            {{ form_row(form.festival) }}
            <input type="submit" class="btn btn--dashboard btn--medium" value="Enregistrer">
            {{ form_end(form) }}
            </div>
        </div>
</main>
{% endblock %}