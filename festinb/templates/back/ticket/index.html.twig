{% extends 'back/base.html.twig' %}

{% block content %}
<main>
    {% include 'back/_addFlashes.html.twig' %}
    <div class="useful-width useful-width__white-background">
        <div class="listing">
            <h1>Tous les tickets</h1>
            <a href="{{ path('app_back_ticket_create') }}" class="btn--dashboard">Ajouter</a>
        </div>
        <table id="datatable" class="display">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date de d√©but</th>
                    <th>Date de fin</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.title }}</td>
                    <td>{{ ticket.startDate|date('d/m/Y') }}</td>
                    <td>{{ ticket.endDate|date('d/m/Y') }}</td>
                    <td>{{ ticket.price  }}</td>
                    <td>
                        <a href="{{ path('app_back_ticket_update', {'uuid' : ticket.uuid}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="{{ path('app_back_ticket_delete', {'uuid' : ticket.uuid}) }}"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</main>
{% endblock %}